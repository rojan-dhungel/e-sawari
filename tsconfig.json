
{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/pages/*": [
        "./src/pages/*"
      ],
      "@/landing-components/*": [
        "./src/landing-components/*"
      ],
      "@/styles/*": [
        "./src/styles/*"
      ],
      "@/layout/*": [
        "./src/layout/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/howitworks-component/*": [
        "./src/howitworks-component/*"
      ],
      "@/safety-components/*": [
        "./src/safety-components/*"
      ],
      "@/support-components/*": [
        "./src/support-components/*"
      ],
      "@/ui/*": [
        "./src/ui/*"
      ],
      "@/documents/*": [
        "./src/Documents/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}